<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar_orange"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/safe_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="You are safe now"
            android:textColor="#AAAAAA"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/safe_text_sub"
            android:layout_below="@id/safe_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Did you fall?"
            android:textColor="#AAAAAA"
            android:textSize="18sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button_cancel_help"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/safe_text_sub"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="CANCEL HELP"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_test_fall"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_cancel_help"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="GET HELP NOW" />

    </RelativeLayout>

</LinearLayout>